<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %date{yyyy-MM-dd HH:mm:ss.SSSZ} [%thread] %.-1level [%mdc{dd.trace_id}] %36logger{36} - %msg%n
            </Pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
